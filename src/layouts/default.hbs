	<body class="page-{{page.slug}}">
		<header class="site-header depth-3 depth-4-hover">
			 <nav class="site-nav">
				 <a id="sidebar-toggle">
					 <div class="menu-icon">
						 <span></span>
						 <span></span>
						 <span></span>
						 <span></span>
					 </div>
				 </a>
				<div class="logo">
					<a href="{{url ''}}" title="Aggie FIRST Robotics Home Page">
						<img src="{{url '/assets/img/logos/afr.png'}}" alt="Aggie FIRST Robotics Logo" title="Aggie FIRST Robotics" />
					</a>
				</div>
				<ul role="menubar" class="nav-links">
					{{!-- <li role="none"><a role="menuitem" href="{{url '/about'}}">About</a></li> --}}
					<li class="has-children" role="none"><a role="menuitem" {{!--href="{{url '/activities'}}"--}}>Activities</a><ul>
						<li><a href="{{url '/activities/vex'}}">VEX U</a></li>
						<li><a href="{{url '/activities/robots-done-quick'}}">Robots Done Quick</a></li>
					</ul></li>
					<li role="none"><a role="menuitem" href="{{url '/member-resources'}}">Member Resources</a></li>
					<li role="none"><a role="menuitem" href="{{url '/sponsors'}}">Sponsors</a></li>
				</ul>
			</nav>
		</header>
		<main>
			{{{body}}}
			{{#unless page.noSponsors}}
			{{!-- use the term supporters since sponsors triggers ad blockers! --}}
			{{#filter @site.sponsors type="platinum" as |sponsors|}}
			{{#container id="supporters"}}
				<div class="supporter-grid vertically-centered">
				{{#each sponsors}}
					<div class="supporter-single">
						{{#if link}}<a href="{{link}}" target="_blank" rel="nofollow noreferrer">{{/if}}
							<img class="supporter-logo" src="{{url logo}}" alt="{{name}}" />
							{{#if link}}</a>{{/if}}
					</div>
				{{/each}}
				</div>
			{{/container}}{{/filter}}{{/unless}}
		</main>
		<footer class="container">
			<div class="copyright">&copy; 2018 <a href="{{url ''}}">Aggie FIRST Robotics</a></div>
			<a class="logo-wrapper" href="https://tamu.edu" target="_blank" rel="noopener noreferrer"><img class="tamu-logo" src="{{url '/assets/img/logos/tamu.png'}}" alt="Texas A&M University Logo" /></a>
			<ul class="social">
				<li>
					<a href="{{@site.social.facebook}}" class="social-link" target="_blank" rel="noopener noreferrer">
						{{icon "facebook" wrapper="false"}}
					</a>
				</li>
				<li>
					<a href="{{@site.social.youtube}}" class="social-link" target="_blank" rel="noopener noreferrer">
						{{icon "youtube" wrapper="false"}}
					</a>
				</li>
			</ul>
		</footer>
		<div id="menu-overlay"></div>
	</body>
